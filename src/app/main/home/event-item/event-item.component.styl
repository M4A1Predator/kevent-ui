.event
  display flex
  align-items center
  margin 24px
  padding 8px
  border 2px solid #CCE1E9
  border-radius 1em
  @media(max-width 960px)
    flex-direction column

.event-cover
  height: 450px;
  width: 300px;

.event-detail
  margin 1.5em

.event-cover-img
  max-width: 100%;
  max-height: 100%;
  border-radius 0.8em

.event-name, .event-name::after {
  font-weight: 900;
  color: #112233;
  display: inline-block;
  position: relative;
  letter-spacing: .1em;
  padding: .2em 0 .25em 0;
}

.event-name {
  font-size: 4em;
  text-shadow: .04em .04em 0 #9cb8b3;
}

.event-des
  font-size: 1em;
  font-weight: 900;
  color: #112233;

.artist-tag-list
  margin 8px 0
  .artist-tag
    color: #f8f8f8; 
    font-size: 18px; 
    font-weight: 500; 
    line-height: 32px; 
    margin: 0 0 24px;
    background-color: #52b4de;
    padding: 0.25em;
    border-radius: 0.5em;